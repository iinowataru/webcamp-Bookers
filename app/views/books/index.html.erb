<header>
<h1>Books</h1>
</header>

    <table>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </table>

    <% @books.each do |book| %>
    <div class=main>
  <span><%= book.title %></span>
 <span><%= book.body %></span>



<span>
 <%= link_to "Show", book_path(book) %>
<%= link_to "Edit", edit_book_path(book) %>
<%= link_to "Destroy", book_path(book), method: :delete %>
</span>
</div>
</div>
<% end %>

